@model CashFlow.Web.Models.ReportViewModel

@{
    ViewData["Title"] = "Report";
}

<h1>Daily Balance Report</h1>

<form asp-controller="Reports" asp-action="Report" method="get" class="form-inline">
    <div class="form-group">
        <label for="startDate" class="mr-2">Start Date:</label>
        <input type="date" id="startDate" name="startDate" asp-for="StartDate" class="form-control mr-3">
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Total Debits</th>
            <th>Total Credits</th>
            <th>Net Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dailyBalance in Model.DailyBalances)
        {
            <tr>
                <td>@dailyBalance.Date.ToShortDateString()</td>
                <td>@dailyBalance.TotalDebits.ToString("C")</td>
                <td>@dailyBalance.TotalCredits.ToString("C")</td>
                <td>@dailyBalance.NetBalance.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
